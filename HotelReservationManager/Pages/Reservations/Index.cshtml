@page
@model HotelReservationManager.Pages.Reservations.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Reservations</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Roomd ID
            </th>
            <th>
                User ID
            </th>
            <th>
                Date Of Accommodation
            </th>
            <th>
                Release Date
            </th>
            <th>
                Breakfast Included
            </th>
            <th>
                All Inclusive Included
            </th>
            <th>
                Owed Amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfAccommodation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreakfastIncluded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllInclusiveIncluded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwedAmount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ReservationId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ReservationId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ReservationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

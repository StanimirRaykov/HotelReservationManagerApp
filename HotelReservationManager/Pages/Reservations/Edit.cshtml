@page
@model HotelReservationManager.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ReservationId" />
            <div class="form-group">
                <label asp-for="Reservation.RoomId" class="control-label"></label>
                <input asp-for="Reservation.RoomId" class="form-control" />
                <span asp-validation-for="Reservation.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.UserId" class="control-label"></label>
                <input asp-for="Reservation.UserId" class="form-control" />
                <span asp-validation-for="Reservation.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.DateOfAccommodation" class="control-label"></label>
                <input asp-for="Reservation.DateOfAccommodation" class="form-control" />
                <span asp-validation-for="Reservation.DateOfAccommodation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ReleaseDate" class="control-label"></label>
                <input asp-for="Reservation.ReleaseDate" class="form-control" />
                <span asp-validation-for="Reservation.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Reservation.BreakfastIncluded" /> @Html.DisplayNameFor(model => model.Reservation.BreakfastIncluded)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Reservation.AllInclusiveIncluded" /> @Html.DisplayNameFor(model => model.Reservation.AllInclusiveIncluded)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.OwedAmount" class="control-label"></label>
                <input asp-for="Reservation.OwedAmount" class="form-control" />
                <span asp-validation-for="Reservation.OwedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
